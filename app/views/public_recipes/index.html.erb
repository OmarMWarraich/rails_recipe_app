<h1 class="text-2xl font-extrabold text-gray-900  md:text-3xl lg:text-4xl"> Public Recipes List </h1>
<div class="flex justify-center">
  <%= image_tag ("recipes4.jpg"), :class => "w-9/12 border rounded-3xl"%>
</div>
<div class="wrapper">

<% if @public_recipes.length != 0 %>
<% @public_recipes.each do |recipe| %>
  <%= render partial: 'public_recipe_card', locals: { recipe: recipe, user_id: recipe.id } %>
<% end %>
<% else %>
  <h1 class="text-2xl font-extrabold text-gray-900  md:text-1xl lg:text-2xl">There are no <span class="text-amber-500">public</span> recipes to show</h1>
<% end %>

</div>