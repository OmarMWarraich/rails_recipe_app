<div class="flex justify-center">
<%= image_tag ("food.jpg"), :class => "w-6/12 border rounded-3xl"%>
</div>
<div class="container d-flex justify-content-center align-items-center">
   
<div class="new-food-container ms-5 mt-5 align-items-center" style='width:370px'>
    <h1 class="create-title">Add A New Food</h1>
    <%= form_with model: @food, url: foods_path do |f| %>
    <div class="form-group">
        <div class="form-outline mb-4">
            <%= f.label :name %><br />
            <%= f.text_field :name, class: "form-control form-control-lg" %>
        </div>
        <div class="form-outline mb-4">
            <%= f.label :measurement_unit %><br />
            <%= f.select :measurement_unit, ['grams', 'kilograms', 'units', 'litres', 'dozen'],
       {}, {class: "form-select"}  %>
        </div>
        <div class="form-outline mb-4">
            <%= f.label :price %><br />
            <%= f.number_field :price, class: "form-control form-control-lg" %>
        </div>
        
        <div class="mt-5 text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm w-full sm:w-auto px-5 py-2.5 text-center dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800">
             <%= f.submit data: {turbo: false}, class: "btn btn-primary btn-lg btn-block" %>
        </div>
    </div>
    <% end %>
</div>

</div>